<div class="container">
  <div class="row">
    <div class="col-lg-12">
      <h1>顧客情報編集</h1>
      <%= form_with model:@customer, url: admin_customer_path, local:true do |f| %>
        <div class="form-group">
          <%= f.label :"会員ID", class: "col-sm-4 control-label" %>
            <%= f.label :"#{@customer.id}" %>
        </div>
        <div class="form-group">
          <%= f.label :"名前", class: "col-sm-4 control-label" %>
          <%= f.text_field :last_name, class: "col-sm-3 form-control-static name"  %>
          <%= f.text_field :first_name, class: "col-sm-3 form-control-static name"  %>
        </div>
        <div class="form-group">
          <%= f.label :"フリガナ", class: "col-sm-4 control-label" %>
          <%= f.text_field :last_name_kana, class: "col-sm-3 form-control-static name"  %>
          <%= f.text_field :first_name_kana, class: "col-sm-3 form-control-static name"  %>
        </div>
        <div class="form-group">
          <%= f.label :"郵便番号", class: "col-sm-4 control-label" %>
          <%= f.text_field :postal_code, class: "col-sm-3 form-control-static name"  %>
        </div>
        <div class="form-group">
          <%= f.label :"住所", class: "col-sm-4 control-label" %>
          <%= f.text_field :address, class: "col-sm-3 form-control-static name"  %>
        </div>
        <div class="form-group">
          <%= f.label :"電話番号", class: "col-sm-4 control-label" %>
          <%= f.text_field :telephone_number, class: "col-sm-3 form-control-static name"  %>
        </div>
        <div class="form-group col-xs-9">
        <%= f.label :"会員ステータス", class: "col-sm-4 control-label" %>
        　<%= f.radio_button :is_active, true %>
        　<%= f.label :is_active, "退会済", {value: :true, style: "display: inline-block;"} %>
        　<%= f.radio_button :is_active, false %>
        　<%= f.label :is_active, "有効", {value: :false, style: "display: inline-block;"} %>
        </div>
        <div class="btn-group" style="width: 50%; height: 100px; margin: 0 auto; display: block;">
          <%= link_to '会員詳細に戻る', admin_customer_path(@customer), class:"btn btn-info", style:"display:inline-block;" %>
          <%= f.submit "変更を保存する", class:"btn btn-success", style:"display:inline-block;" %>
        </div>
      <% end %>
    </div>
  </div>
</div>