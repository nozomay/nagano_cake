<%= render "layouts/admin_navbar" %>
<div class="container">
  <div class="row">
    <h1>顧客詳細画面</h1>
  </div>
    <div class="col-lg-12">
  <body>
    <div class="border col-7">
        <br>
        <div class="field">
          <% if flash[:notice] %>
            <div class="flash">
              <%= flash[:notice] %>
            </div>
          <% end %>
          <p>
            顧客名：
            <p>
              【姓】<%= @customer.last_name %>　【名】<%= @customer.first_name %>
            </p>
            <p>
              【姓カナ】<%= @customer.last_name_kana %>　【名カナ】<%= @customer.first_name_kana %>
            </p>
          </p>
        </div>
        <br>
        <div class="field">
          <p>
            郵便番号：<%= @customer.postal_code %>
          </p>
        </div>
        <br>
        <div class="field">
          <p>
            住所：<%= @customer.address %>
          </p>
        </div>
        <br>
        <div class="field">
          <p>
            電話番号：<%= @customer.telephone_number %>
          </p>
        </div>
        <br>
        <div class="field">
          <p>
            メールアドレス：<%= @customer.email %>
          </p>
        </div>
        <br>
        <div class="field">
          <p>
            退会ステータス:
            <% if @customer.is_active == true %>
              退会済み
            <% elsif @customer.is_active == false %>
              　有効会員
            <% end %>
          </p>
        </div>
        <br>
          </p>
        </div>
        <br>
        <div class="field">
          <p>
            <div class="col-5">
              <%= link_to "編集", edit_admin_customer_path(@customer) %>
            </div>
          </p>
        </div>