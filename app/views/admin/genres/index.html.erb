<%= render "layouts/admin_navbar" %>
<div class="container">
  <div class="row">
    <div class="col-lg-12">
      <h1>ジャンル一覧</h1>
      <table class="table">
        <thead class="thead-dark">
          <tr>
            <th scope="col">ジャンルID</th>
            <th scope="col">ジャンル名</th>
            <th colspan="1"></th>
          </tr>
        </thead>
        <tbody>
          <% @genres.each do |genre| %>
            <tr>
              <td><%= genre.id %></td>
              <td><%= genre.name %></td>
              <td>
                <%= link_to "編集", edit_admin_genre_path(genre.id), class: "btn btn-secondary" %>
              </td>
            </tr>
          <% end %>
        </tbody>
      </table>
      <h2>ジャンル追加</h2>
      <%= form_with model:@genre, url: admin_genres_path, local:true do |f| %>
        <div class="form-group">
          <label>ジャンル名：</label>
            <%= f.text_field :name %>
        </div>
        <div class="col-5">
          <%= f.submit '新規登録', class: "btn btn-success"%>
        </div>
      <% end %>
    </div>
  </div>
</div>