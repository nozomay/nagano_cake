<%= render "layouts/admin_navbar" %>
<div class="container">
  <div class="row">
    <div class="col-lg-12">
      <br>
      <h2>ジャンル一覧</h2>
    </div>
  </div>
  <div class="row">
    <div class="col-lg-12">
    <br>
      <% if flash[:notice] %>
          <div class="flash">
            <%= flash[:notice] %>
          </div>
      <% end %>
    <br>
      <table class="table">
        <thead class="thead-dark">
          <tr>
            <th scope="col">ジャンルID</th>
            <th scope="col">ジャンル名</th>
            <th colspan="1"></th>
          </tr>
        </thead>
        <tbody>
          <% @genres.each do |genre| %>
            <tr>
              <td><%= genre.id %></td>
              <td><%= genre.name %></td>
              <td>
                <%= link_to "編集", edit_admin_genre_path(genre.id), class: "btn btn-secondary" %>
              </td>
            </tr>
          <% end %>
        </tbody>
      </table>
    </div>
  </div>
  <div class="row">
    <div class="col-lg-12">
      <br>
      <h2>ジャンル追加</h2>
    </div>
  </div>
  <%= form_with model:@genre, url: admin_genres_path, local:true do |f| %>
    <div class="form-group">
      <%= f.label :"ジャンル名：" %>
      <%= f.text_field :name %>
    </div>
    <div class="col-5">
      <%= f.submit '新規登録', class: "btn btn-success"%>
    </div>
  <% end %>
</div>