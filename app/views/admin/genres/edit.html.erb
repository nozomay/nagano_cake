<div class="container">
  <div class="row">
    <div class="col-lg-12">
      <h1>管理者画面</h1>
      <h2>ジャンル編集</h2>
      <%= form_with model:@genre, url: admin_genres_path, local:true do |f| %>
        <div class="form-group">
          <label>ジャンル名：</label>
            <%= f.text_field :name %>
        </div>
        <div class="col-5">
          <%= f.submit '登録', class: "btn btn-success"%>
        </div>
      <% end %>
      <%= link_to "ジャンル一覧", admin_genres_path %>
    </div>
  </div>
</div>