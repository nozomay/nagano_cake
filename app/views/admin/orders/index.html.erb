<div class="container">
  <div class="row">
    <div class="col-lg-12">
      <h1>管理者画面</h1>
      <h2>注文履歴一覧</h2>
      <table class="table">
        <thead class="thead-dark">
          <tr>
            <th scope="col">購入日時</th>
            <th scope="col">購入者</th>
            <th scope="col">注文個数</th>
            <th scope="col">注文ステータス</th>
          </tr>
        </thead>
        <tbody>
          <% @orders.each do |order| %>
            <tr>
              <td><%= order.created_at %></td>
              <td><%= order.name %></td>
              <td><%= order.order_details.count %></td>
              <td><%= order.statuse %></td>
            </tr>
          <% end %>
        </tbody>
      </table>
    </div>
  </div>
</div>