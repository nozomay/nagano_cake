<div class="container">
  <div class="row">
    <div class="col-lg-12">
      <h1>管理者画面</h1>
      <h2>商品一覧</h2>
      <table class="table">
        <thead class="thead-dark">
          <tr>
            <th scope="col">商品ID</th>
            <th scope="col">ジャンルID</th>
            <th scope="col">商品名</th>
            <th scope="col">税抜価格</th>
            <th scope="col">販売ステータス</th>
          </tr>
        </thead>

        <tbody>
          <% @items.each do |item| %>
            <tr>
              <td><%= item.id %></td>
              <td><%= item.genre_id %></td>
              <td>
                <%= link_to admin_item_path(item), class: "btn-link" do %>
                  <%= item.name %>
                <% end %>
              </td>
              <td><% item.price %>円</td>
              <td><%= item.is_active %></td>
            </tr>
          <% end %>
        </tbody>
      </table>
    </div>
  </div>
</div>