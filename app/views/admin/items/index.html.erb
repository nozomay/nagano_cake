<%= render "layouts/admin_navbar" %>
<div class="container">
  <div class="row">
    <div class="col-lg-12">
      <h2>商品一覧</h2>
    </div>
  </div>
  <div class="row">
    <div class="col-lg-12 d-flex justify-content-end">
      <%= link_to "商品新規登録", new_admin_item_path, class: 'btn btn-warning' %>
    </div>
  </div>
  <div class="row">
    <table class="table">
      <thead class="thead-dark">
        <tr>
          <th scope="col">商品ID</th>
          <th scope="col">ジャンルID</th>
          <th scope="col">商品名</th>
          <th scope="col">税抜価格</th>
          <th scope="col">販売ステータス</th>
        </tr>
      </thead>
      <tbody>
        <% @items.each do |item| %>
          <tr>
            <td><%= item.id %></td>
            <td><%= item.genre_id %></td>
            <td>
              <%= link_to admin_item_path(item), class: "btn-link" do %>
                <%= item.name %>
              <% end %>
            </td>
            <td>¥<%= item.price %></td>
            <td>
              <% if item.is_active == true %>
                <p>販売中</p>
              <% else item.is_active == false %>
                <p>販売停止</p>
              <% end %>
            </td>
          </tr>
        <% end %>
      </tbody>
    </table>
  </div>
</div>