<div class="container">
  <div class="row">
    <div class="col-lg-12">
  <body>
    <br>
    <h1>管理者画面</h1>
    <br>
    <div class="border col-7">
        <br>
        <h2>商品詳細</h2>
        <div class="img_field">
          <p>
            <%= attachment_image_tag @item, :image, :fill, 300, 300, format: 'jpeg', fallback: "20200501_noimage.jpg" %>
          </p>
        </div>
        <div class="field">
          <p>
            商品名：<%= @item.name %>
          </p>
        </div>
        <br>
        <div class="field">
          <p>
            商品説明：<%= @item.introduction %>
          </p>
        </div>
        <br>
        <div class="field">
          <p>
            ジャンル:<%= @item.genre.name %>
          </p>
        </div>
        <br>
        <div class="field">
          <p>
            税抜価格:<%= @item.price %>
          </p>
        </div>
        <br>
        <div class="field">
          <p>
            販売ステータス：<%= @item.is_active == true %>
                              <p class="text-primary">販売中</p>
                            <%= elsif @item.is_active == false %>
                              <p class="text-danger">販売中止</p>
                            <% end %>
          </p>
        </div>
        <br>
        <div class="field">
          <p>
            <div class="col-5">
              <%= link_to "編集", edit_admin_item_path(@item) %>
            </div>
          </p>
        </div>