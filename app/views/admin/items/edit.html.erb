<div class="container">
  <div class="row">
    <div class="col-lg-12">
  <body>
    <br>
    <h1>管理者画面</h1>
    <br>
    <div class="border col-7">
        <br>
        <h2>商品情報編集</h2>
        <br>
         <div class="row">
            <div class="col-md">
                <%= form_with model: @item, url: admin_item_path(@item), local: true do |f| %>
                    <div class="form-group">
                          <%= f.label :genre_id %>
                          <%= f.collection_select :genre_id, Genre.all, :id, :name %>
                    </div>
                    <div class="form-group">
                        <label>商品名：</label>
                        <%= f.text_field :name %>
                    </div>
                    <div class="form-group">
                        <label>商品説明：</label>
                        <%= f.text_area :introduction %>
                    </div>
                    <div class="form-group">
                        <label>税抜金額：</label>
                        <%= f.text_field :price %>円
                    </div>
                    <div class="form-group">
                        <label>販売ステータス：</label>
                        <%= f.select :is_active,{販売中:true, 販売停止:false}%>
                    </div>
                    <div class="img_field">
                        <label>画像：</label>
                        <%= f.attachment_field :image %>
                    </div>
                    <div class="col-5">
                        <%= f.submit '登録', class: "btn btn-success"%>
                    </div>
                <% end %>
                        <div class="col-5">
                            <%= link_to "商品一覧", admin_items_path %>
                        </div>
                    </div>
        </div>
        <br>
    </div>
    </body>