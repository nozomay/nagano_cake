<%= render "layouts/public_navbar" %>
<div class="row">
  <div class="col-xs-12">

    <h2 class="head-line title_h2 text-center">登録情報編集</h2>

<%= form_with model: @customer, url: customer_registration_path, local:true do |f| %>
  <%= render "customers/shared/error_messages", resource: resource %>

  <div class="col-xs-10">
        <div class="form-group col-xs-12">
          <%= f.label :"氏名", class: "col-sm-3 control-label" %>
          <%= f.text_field :last_name, class: "last_name col-sm-3 form-control-static name" %>
          <%= f.text_field :first_name, class: "first_name col-sm-3 form-control-static name" %>
        </div>
        <div class="form-group col-xs-12">
          <%= f.label :"フリガナ", class: "col-sm-3 control-label" %>
          <%= f.text_field :last_name_kana, class: "kana_last_name col-sm-3 form-control-static name" %>
          <%= f.text_field :first_name_kana, class: "kana_first_name col-sm-3 form-control-static name" %>
        </div>
        <div class="form-group col-xs-12">
          <%= f.label :"メールアドレス", class: "col-sm-3 control-label" %>
          <%= f.email_field :email, autofocus: true, autocomplete: "email", class: "col-sm-6 form-control-static" %>
        </div>
        <% if devise_mapping.confirmable? && resource.pending_reconfirmation? %>
          <div>Currently waiting confirmation for: <%= resource.unconfirmed_email %></div>
        <% end %>
        <div class="form-group col-xs-12">
          <%= f.label :"郵便番号", class: "col-sm-3 control-label" %>
          <%= f.text_field :postal_code, class: "col-sm-2 form-control-static" %>
        </div>
        <div class="form-group col-xs-12">
          <%= f.label :"住所", class: "col-sm-3 control-label" %>
          <%= f.text_field :address, class: "col-sm-9 form-control-static" %>
        </div>
        <div class="form-group col-xs-12">
          <%= f.label :"電話番号(ハイフンなし)", class: "col-sm-3 control-label" %>
          <%= f.text_field :telephone_number, class: "col-sm-2 form-control-static" %>
        </div>
        <div class="field  col-xs-12">
          <%= f.label :password %> <i>(leave blank if you don't want to change it)</i><br />
          <%= f.password_field :password, autocomplete: "new-password" %>
          <% if @minimum_password_length %>
            <br />
            <em><%= @minimum_password_length %> characters minimum</em>
          <% end %>
        </div>

        <div class="field  col-xs-12">
          <%= f.label :password_confirmation %><br />
          <%= f.password_field :password_confirmation, autocomplete: "new-password" %>
        </div>

        <div class="field  col-xs-12">
          <%= f.label :current_password %> <i>(we need your current password to confirm your changes)</i><br />
          <%= f.password_field :current_password, autocomplete: "current-password" %>
        </div>
        <div class="actions col-xs-9 col-xs-offset-3">
          <%= f.submit "編集内容を保存する", class: "btn btn-primary save col-xs-6" %>
          <% end %>
            <%= link_to '退会する', quit_customers_path, class: "glyphicon glyphicon-tint btn btn-danger"%>
        </div>

    <div class="col-xs-12">
      <%= link_to "戻る", customers_path, class: "glyphicon glyphicon-home btn btn-info" %>
    </div>
    </div>
  </div>
</div>