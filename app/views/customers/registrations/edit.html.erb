<%= render "layouts/public_navbar" %>
<div class="container">
  <div class="row">
    <h2>登録情報編集</h2>
  </div>
  <div class="col-xs-12">
  <%= form_with model: @customer, url: customer_registration_path, local:true do |f| %>
  <%= render "customers/shared/error_messages", resource: resource %>

    <div class="row">
      <div class="col-xs-2">
        <div class="space2">
          <%= f.label :"氏名" %><br>
        </div>
        <div class="space2">
          <%= f.label :"フリガナ" %><br>
        </div>
        <div class="space2">
          <%= f.label :"メールアドレス" %><br>
        </div>
        <div class="space2">
          <%= f.label :"郵便番号" %><br>
        </div>
        <div class="space2">
          <%= f.label :"住所" %><br>
        </div>
        <div class="space2">
          <%= f.label :"電話番号(ハイフンなし)" %><br>
        </div>
        <div class="space2">
          <%= f.label :password %> <i>(変更しない場合は空白)</i><br>
        </div>
        <div class="space2">
          <%= f.label :password_confirmation %><br>
        </div>
        <div class="space2">
          <%= f.label :current_password %> <i>(変更には現在のパスワードが必要)</i><br>
        </div>
      </div>
      <div class="col-xs-3 offset-1">
        <!--名前-->
        <%= f.text_field :last_name %>
        <%= f.text_field :first_name %><br>
        <div class="space">
          <!--フリガナ-->
          <%= f.text_field :last_name_kana %>
          <%= f.text_field :first_name_kana %><br>
        </div>
        <div class="space">
          <!--メール-->
          <%= f.email_field :email, autofocus: true, autocomplete: "email" %><br>
            <% if devise_mapping.confirmable? && resource.pending_reconfirmation? %>
              <div>Currently waiting confirmation for: <%= resource.unconfirmed_email %></div>
            <% end %>
        </div>
        <div class="space">
          <!--郵便番号-->
          <%= f.text_field :postal_code %><br>
        </div>
        <div class="space">
          <!--住所-->
          <%= f.text_field :address %><br>
        </div>
        <div class="space">
          <!--電話番号-->
          <%= f.text_field :telephone_number %><br>
        </div>
        <div class="space">
          <!--パスワード-->
          <%= f.password_field :password, autocomplete: "new-password" %>
            <% if @minimum_password_length %>
              <em><%= @minimum_password_length %> characters minimum</em>
            <% end %>
          <br>
        </div>
        <div class="space">
          <!--確認用パス-->
          <%= f.password_field :password_confirmation, autocomplete: "new-password" %><br>
        </div>
        <div class="space">
          <!--現在のパス-->
          <%= f.password_field :current_password, autocomplete: "current-password" %>
        </div>
        <div class="space">
          <!--保存ボタン-->
          <%= f.submit "編集内容を保存する", class: "btn btn-primary" %>
        </div>
      </div>
    </div>
  </div>
 <% end %>
  <div class="col-xs-12">
            <%= link_to '退会する', quit_customers_path, class: "glyphicon glyphicon-tint btn btn-danger"%>
  </div>
    <div class="col-xs-12">
      <%= link_to "戻る", customers_path, class: "glyphicon glyphicon-home btn btn-info" %>
    </div>
  </div>
</div>