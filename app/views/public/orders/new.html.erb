<%= render "layouts/public_navbar" %>
<div class="container">
  <div class="row">
		<h2>注文情報入力画面</h2>
		  <h3>支払方法</h3><br>
		  <%= form_with model: @order, local:true do |f| %>
		    <p>
		      <%= f.radio_button :payment_method, "credit_card" %>
          <%= f.label :payment_method, "クレジットカード" %>
        </p>
        <p>
          <%= f.radio_button :payment_method, "transfer" %>
          <%= f.label :payment_method, "銀行振込" %>
        </p>
      <h3>お届け先</h3><br>
        <p>
          <%= f.radio_button :address, "1" %>
          <%= f.label :address,"ご自身の住所" %><br>
          <%= current_customer.postal_code %> <%= current_customer.address %><br>
          <%= current_customer.name %>
        </p>
        <p>
          <%= f.radio_button :address, "2" %>
          <%= f.label :address,"登録済住所から選択" %><br>
          <%= f.select :address_id, options_from_collection_for_select(Address.all, :id, :name) %>
        </p>
        <p>
          <%= f.radio_button :address, "3" %>
          <%= f.label :address,"新しいお届け先" %><br>
          <%= f.label :郵便番号(ハイフンなし) %>
          <%= f.text_field :postal_code %>
          <%= f.label :住所 %>
          <%= f.text_field :address %>
          <%= f.label :宛名 %>
          <%= f.text_field :name %>
        </p>
        <P><%= f.submit "確認画面へ進む", class:"btn btn-success" %></P>

  </div>
</div>