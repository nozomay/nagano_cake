<div class="container">
	<h2>注文情報確認画面</h2>
		<div class="row d-flex align-items-center">
  		<div class="col-sm-8">
        <table class="table table-bordered">
          <thead>
            <tr class="info">
              <th style="width: 50%">商品名</th>
              <th style="width: 20%">単価(税込)</th>
              <th style="width: 10%">数量</th>
              <th style="width: 50%">小計</th>
            </tr>
          </thead>
          <tbody>
          <% @order.total_payment = 0 %>
      		<% @cart_items.each do |cart_item| %>
        		<tr class="info">
              <td>
                <%= attachment_image_tag cart_item.item, :image, :fill, 40, 40 %>
                <%= cart_item.item.name %>
              </td> <!-- 商品名 -->
              <td><%= cart_item.item.with_tax_price %></td>　<!-- 金額 -->
              <td><%= cart_item.amount %></td> <!-- 個数 -->
              <td><%= cart_item.subtotal %></td> <!-- 小計 -->
              <% @order.total_payment += (cart_item.item.price * 1.1 * cart_item.amount).floor %>
            </tr>
          <% end %>
          </tbody>
        </table>
      </div>
  		<div class="col-sm-4">
        <table class="table table-bordered" style="width: 50%">
          <thead>
            <tr>
              <th>送料</th><td>¥<%= 800 %></td>
            </tr>
            <tr>
              <th>商品合計</th><td>¥<%= @order.total_payment %></td>
            </tr>
            <tr>
              <th>請求金額</th><td>¥<%= @order.total_payment + 800 %></td>
            </tr>
          </thead>
        </table>
      </div>
    </div>
    <div class="row justify-content-start">
      <h4>支払方法</h4>
    </div>
    <div class="row justify-content-center">
      <div class="col-10">
        <%= @order.payment_method_i18n %>
      </div>
    </div>
    <div class="row justify-content-start">
      <h4>お届け先</h4>
    </div>
    <div class="row justify-content-center">
      <div class="col-10">
        <%= @order.address %>
        <%= @order.name %>様
      </div>
    </div>
    <!-- ユーザーには注文確定ボタンだけ表示 -->
    <div class="row justify-content-center">
      <%= form_with model: @order, url: orders_path, local: true do |f| %>
        <%= f.hidden_field :payment_method %>
        <%= f.hidden_field :name %>
        <%= f.hidden_field :postal_code %>
        <%= f.hidden_field :address %>
        <%= f.hidden_field :total_payment %>
        <%= f.submit "注文を確定する" %>
      <% end %>
    </div>
</div>