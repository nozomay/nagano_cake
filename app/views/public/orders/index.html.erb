<%= render "layouts/public_navbar" %>
<div class="container">
  <div class="row">
    <div class="col-lg-12">
      <br>
		  <h2>注文履歴画面</h2>
		</div>
	</div>
	<div class="row">
    <div class="col-lg-12">
		  <table class="table table-hover table-inverse">
  		  <thead>
          <tr class="info">
            <th>注文日</th>
            <th>配送先</th>
            <th>注文ステータス</th>
            <th>支払金額</th>
            <th>注文詳細</th>
          </tr>
        </thead>
  		    <tbody>
  		      <% @orders.each do |order| %>
  		      <tr>
              <td><%= order.created_at.strftime('%Y年%m月%d日') %></td>
              <td>
                〒<%= order.postal_code %><br>
                <%= order.address %><br>
                <%= order.name %> 様
              </td>
              <td><%= order.status_i18n %></td>
              <td>¥<%= order.total_payment %></td>
        			<td><%= link_to order_path(order), class: "btn btn-success" do %>表示する<% end %></td>
        		</tr>
            <% end %>
          </tbody>
        </div>
      </table>
	</div>
</div>
