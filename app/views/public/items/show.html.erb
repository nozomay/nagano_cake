<%= render "layouts/public_navbar" %>
<div class="row">
    <div class="col-xs-4 col-xs-offset-2 product-show">
      <%= attachment_image_tag(@item, :image, size: "340x340", fallback: "no_image.jpg" ) %>
    </div>
    <h2><%= @item.name %></h2><br>
    <p>¥ <%= @item.with_tax_price.to_s(:delimited) %>(税込)</p><br>
    <p><%= @item.introduction %></p><br>
      <% if @item.is_active == true %>
          <% if @item.genre.is_valid == true %>
            <%= form_for(@cart_item , url: customers_cart_items_path, method: :post) do |f| %>
              <%= f.hidden_field :item_id, value: @item.id %>
              <%= f.select :amonut, options_for_select((1..10).to_a), include_blank: "個数選択" %>
              <%= f.submit "カートに入れる", class: "glyphicon glyphicon-shopping-cart btn btn-primary" %>
          <% end %>
          <% else %>
            <h3>販売中</h3>
          <% end %>
      <% elsif @item.is_active == false %>
        <h3>販売停止</h3>
      <% end %>
</div>