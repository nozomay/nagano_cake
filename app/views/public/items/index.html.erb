<%= render "layouts/public_navbar" %>
<div class="container">
  <div class="row">
    <div class="col-lg-12">
      <br>
  	  <h2>商品一覧</h2>
  	</div>
	</div>
  <div class="row">
  	<% @items.each do |item| %>
  	<div class="col-xs-6">
      <div class="card mb-3 text-center" style="width: 18rem;">
        <div class="card-img-top">
          <%= link_to item_path(item.id) do %>
            <%= attachment_image_tag item, :image, :fill, 200, 180, fallback: "no_image.jpg" %>
          <% end %>
        </div>
          <div class="card-body">
            <p class="card-title">
              <%=link_to item.name, item_path(item.id) %>
            </p>
            <p class="card-text">
              ¥ <%= item.with_tax_price.to_s(:delimited) %>(税込)
            </p>
          </div>
        </div>
      </div>
    <% end %>
  </div>
  <%= paginate @items %>
</div>
