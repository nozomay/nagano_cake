<%= render "layouts/public_navbar" %>
<div class="container">
	<h2>My page</h2>
		<div class="row">
			<div class="container">
			<div class="text-right">
				<%= link_to " 編集する", edit_customers_path(@customer), class: "glyphicon glyphicon-pencil btn btn-success" %>
			</div>
    	</div>

			<table class="table table-bordered table-condensed" >
				<tbody>
					<tr>
						<td class="info col-xs-2">登録名</td>
						<td class="text-left"><%= @customer.last_name %><%= @customer.first_name %></td>
					</tr>
					<tr>
						<td class="info col-xs-2">フリガナ</td>
						<td class="text-left"><%= @customer.last_name_kana %><%= @customer.first_name_kana %></td>
					</tr>
					<tr>
						<td class="info">郵便番号</td>
						<td class="text-left">〒<%= @customer.postal_code %></td>
					</tr>
					<tr>
						<td class="info">住所</td>
						<td class="text-left"><%= @customer.address %></td>
					</tr>
					<tr>
						<td class="info">電話番号</td>
						<td class="text-left"><%= @customer.telephone_number %></td>
					</tr>
					<tr>
						<td class="info">メールアドレス</td>
						<td class="text-left"><%= @customer.email %></td>
					</tr>
				</tbody>
			</table>
			<div class="container">
				<div class="row justify-content-around">
					<div class="col-md-4">
						<%= link_to " 配送先一覧", shipping_addresses_path, data: {"turbolinks" => false}, class: "glyphicon glyphicon-folder-open btn btn-info" %>
					</div>
					<div class="col-md-">
						<%= link_to " 注文履歴一覧", orders_path(id: @customer.id), class: "glyphicon glyphicon-folder-open btn btn-info" %>
					</div>
				</div>
			</div>
	</div>
</div>